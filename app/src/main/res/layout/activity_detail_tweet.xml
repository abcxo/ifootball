<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.abcxo.android.ifootball.controllers.activities.TweetDetailActivity.BindingHandler" />

        <import type="android.view.View" />

        <variable
            name="handler"
            type="BindingHandler" />

        <variable
            name="isComment"
            type="Boolean" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_activity_bg"
        android:fitsSystemWindows="true"
        tools:context=".controllers.activities.TweetDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarDark">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupLight">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_text_highlight"
            app:tabIndicatorColor="@color/color_icon_light"
            android:layout_marginTop="?attr/actionBarSize"
            android:visibility="@{isComment?View.GONE:View.VISIBLE}"
            app:tabSelectedTextColor="@color/color_accent_search"
            app:tabTextColor="@color/color_text_empty" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="65dp"
            android:paddingBottom="48dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_text_highlight"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_min"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_min">

            <EditText
                android:id="@+id/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/detail_tweet_text_hint"
                android:textColor="@color/color_text_input"
                android:textColorHint="@color/color_text_append"
                android:textSize="@dimen/text_input" />

            <com.abcxo.android.ifootball.views.IconFontView
                android:id="@+id/send"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:onClick="@{handler.onClickSend}"
                android:text="@string/iconfont.send"
                android:textColor="@color/color_accent_search"
                android:textSize="@dimen/text_huge" />
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>
</layout>