<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.abcxo.android.ifootball.models.User" />

        <import type="android.view.View" />

        <variable
            name="user"
            type="User" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".controllers.activities.UserDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarDark">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/nav_header_height"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test0"
                    app:imageUrl="@{user.cover}"
                    app:layout_collapseMode="parallax" />


                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nav_header_height"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <RelativeLayout
                        android:id="@+id/focus_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text="@{user.name}"
                            android:textColor="@color/color_text_title"
                            android:textSize="@dimen/text_title"
                            tools:text="咸蛋超人" />

                        <Button
                            android:id="@+id/focus_btn"
                            android:visibility="@{user.isMe()?View.INVISIBLE:View.VISIBLE}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@{user.focus?@color/color_icon_red:@color/color_button_minor}"
                            android:onClick="@{user.handler.onClickFocus}"
                            android:text="@{user.focus?@string/unfocus_text:@string/focus_text}"
                            android:textColor="@color/color_text_highlight" />


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/focus_layout"
                        android:layout_marginTop="@dimen/padding_small"
                        android:text="@{user.sign}"
                        android:textColor="@color/color_text_content"
                        android:textSize="14dp"
                        android:visibility="@{user.sign!=null?View.VISIBLE:View.GONE}"
                        tools:text="娱乐圈有很多的明星都有同班同学，有的大红大紫成为一线，有的则籍籍无名十八线，还有的还在跑龙套，地位和身价天壤之别，令人感叹“同班不同命”。下面小编就为大家盘点一下北电96级12大美女的发展现状。" />

                    <LinearLayout
                        android:id="@+id/fans_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sign"
                        android:layout_marginTop="@dimen/padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(user.focusCount)}"
                            android:textColor="@color/color_text_indicate"
                            android:textSize="@dimen/text_small"
                            tools:text="284" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_small"
                            android:text="@string/focus_text"
                            android:textColor="@color/color_text_append"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding"
                            android:text="@{String.valueOf(user.fansCount)}"
                            android:textColor="@color/color_text_indicate"
                            android:textSize="@dimen/text_small"
                            tools:text="17" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_small"
                            android:text="@string/fans_text"
                            android:textColor="@color/color_text_append"
                            android:textSize="@dimen/text_small" />

                    </LinearLayout>


                    <View
                        android:id="@+id/divider"
                        style="@style/Divider"
                        android:layout_below="@id/fans_layout"
                        android:layout_marginTop="@dimen/padding" />


                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:paddingBottom="@dimen/padding_mid"
            app:layout_anchor="@id/layout"
            app:layout_anchorGravity="top|left"
            app:layout_behavior="com.abcxo.android.ifootball.views.ViewVisiblityBehavior">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                app:error="@{@drawable/ic_avatar}"
                app:imageUrl="@{user.avatar}"
                app:riv_border_color="@color/color_white"
                app:riv_border_width="2dp"
                app:riv_corner_radius="@dimen/icon_radius_max"
                tools:src="@drawable/test2" />

        </FrameLayout>


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/color_primary"
                    app:tabSelectedTextColor="@color/color_primary"
                    app:tabTextColor="@color/color_primary_light" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>