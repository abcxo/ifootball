<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.abcxo.android.ifootball.models.Tweet" />

        <variable
            name="tweet"
            type="Tweet" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/item_cover"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{tweet.content.cover}"
            tools:src="@mipmap/test2" />


        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_toRightOf="@id/item_cover"
            android:text="@{tweet.content.title}"
            android:textColor="@color/color_text_title"
            android:textSize="16dp"
            tools:text="恒大队的外援威震中超" />


        <TextView
            android:id="@+id/item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_title"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="@dimen/padding_small"
            android:maxLines="2"
            android:text="@{tweet.content.summary}"
            android:textColor="@color/color_text_content"
            android:textSize="14dp"
            tools:text="在那一年被贴在那一年占了恒大队全队进球的七成。" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_summary"
            android:layout_marginTop="@dimen/_padding_small"
            android:gravity="center">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_reply"
                android:tint="@color/color_icon_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_small"
                android:text="@{tweet.replyCount}"
                android:textColor="@color/color_text_append"
                android:textSize="12dp"
                tools:text="307" />
        </LinearLayout>


    </RelativeLayout>
</layout>