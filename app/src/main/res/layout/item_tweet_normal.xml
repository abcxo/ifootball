<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.abcxo.android.ifootball.models.Tweet" />

        <import type="com.abcxo.android.ifootball.models.Tweet.TweetDetailType" />

        <import type="com.abcxo.android.ifootball.controllers.fragments.main.TweetFragment.BindingHandler" />

        <variable
            name="tweet"
            type="Tweet" />

        <variable
            name="handler"
            type="BindingHandler" />
    </data>

    <RelativeLayout
        style="@style/Item"
        android:onClick="@{tweet.detailType == TweetDetailType.TWEET ? handler.onClickTweet:handler.onClickNews}">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/icon_radius"
            android:onClick="@{handler.onClickUser}"
            app:imageUrl="@{tweet.icon}"
            tools:src="@drawable/test2" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_toRightOf="@id/icon"
            android:singleLine="true"
            android:text="@{tweet.name}"
            android:textColor="@color/color_text_title"
            android:textSize="16dp"
            tools:text="咸蛋超人" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@{tweet.time}"
            android:textColor="@color/color_text_append"
            android:textSize="12dp"
            tools:text="3小时" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/padding_small"
            android:text="@{tweet.summary}"
            android:textColor="@color/color_text_content"
            android:textSize="14dp"
            tools:text="里皮时代，恒大队的外援威震中超，尤其是孔卡、穆里奇、埃尔克森的南美前场铁三角组合，在2013年横扫亚洲赛场。“恒大靠外援”的标签，在那一年被贴得格外严实，撕都撕不掉。三人的进球，在那一年占了恒大队全队进球的七成。" />

        <ImageView
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/summary"
            android:layout_marginTop="@dimen/padding"
            android:scaleType="centerCrop"
            app:imageUrl ="@{tweet.imageList[0]}"
            android:src="@drawable/test0" />

        <include
            android:id="@+id/repeat_content"
            layout="@layout/content_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@id/images"
            android:layout_marginTop="@dimen/padding"
            bind:tweet="@{tweet.originTweet}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/repeat_content"
            android:layout_marginTop="@dimen/padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_comment"
                    android:tint="@color/color_icon_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:text="@{String.valueOf(tweet.commentCount)}"
                    android:textColor="@color/color_text_append"
                    android:textSize="12dp"
                    tools:text="307" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_repeat"
                    android:tint="@color/color_icon_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:text="@{String.valueOf(tweet.repeatCount)}"
                    android:textColor="@color/color_text_append"
                    android:textSize="12dp"
                    tools:text="284" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/color_icon_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:text="@{String.valueOf(tweet.starCount)}"
                    android:textColor="@color/color_text_append"
                    android:textSize="12dp"
                    tools:text="97" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>