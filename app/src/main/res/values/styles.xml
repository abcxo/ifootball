<resources>






    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_bright</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>

        <item name="android:textColorHint">@color/color_text_slightLight</item>
        <item name="colorControlNormal">@color/color_text_slightLight</item>

        <item name="actionBarSize">@dimen/nav_height</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--parent设置为启动页的theme-->
    <style name="AppTheme.LauncherTheme" parent="AppTheme.NoActionBar.NoStatusBar">
        <item name="android:windowBackground">@drawable/img_launcher</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Toolbar.TitleText.Logo" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppTheme.NoActionBar.NoStatusBar" parent="AppTheme.NoActionBar"></style>


    <style name="AppTheme.NoActionBar.NoStatusBar.NoNavigationBar" parent="AppTheme.NoActionBar.NoStatusBar"></style>


    <style name="AppTheme.AppBarDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.AppBarLight" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>

    <style name="AppTheme.PopupLight" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Divider">
        <item name="android:background">@drawable/ic_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="Big_Divider">
        <item name="android:background">@drawable/ic_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="DividerSlide">
        <item name="android:background">@color/color_slide_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_primary_light</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_input</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_primary_light</item>
        <item name="colorControlActivated">@color/color_primary</item>
    </style>


    <style name="Gender" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/icon_gender_height</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/color_icon_highlight</item>
        <item name="android:textColor">@color/color_text_highlight</item>
        <item name="android:textSize">@dimen/text_small</item>

        <item name="android:paddingLeft">@dimen/padding_min</item>
        <item name="android:paddingRight">@dimen/padding_min</item>
    </style>


    <style name="Male" parent="Gender">
        <item name="android:text">@string/gender_male_text</item>
        <item name="android:background">@drawable/bg_male</item>
        <item name="android:drawableLeft">@drawable/ic_male</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="Female" parent="Gender">
        <item name="android:text">@string/gender_female_text</item>
        <item name="android:background">@drawable/bg_female</item>
        <item name="android:drawableLeft">@drawable/ic_female</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
